{
  "name": "ecommerce-microservices",
  "version": "1.0.0",
  "description": "E-Commerce Microservices with API Gateway",
  "scripts": {
    "start:auth": "cd auth-service && npm start",
    "start:product": "cd product-service && npm start",
    "start:gateway": "cd api-gateway && npm start",
    "install:all": "cd auth-service && npm install && cd ../product-service && npm install && cd ../api-gateway && npm install",
    "docker:up": "docker-compose up --build",
    "docker:down": "docker-compose down"
  }
}
